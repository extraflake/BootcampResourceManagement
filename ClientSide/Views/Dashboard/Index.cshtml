<script type="text/javascript">
    $(document).ready(function () {
		Graph();
        Plan();
        Top();
        Hiring();
    });

    function Graph() {
        $.ajax({
            type: 'GET',
            url: '/Dashboard/LoadDistribution/',
            success: function (data) {
                Morris.Donut({
                    element: 'morris-donut-chart',
                    data:
                        $.each(JSON.parse(data), function (index, val) {
                            [{
                                label: val.label,
                                value: val.value + '%'
                            }]
                        }),
                    resize: true
                });
            }
        });
    }

    function Hiring() {
        $.ajax({
            type: 'GET',
            url: '/Dashboard/LoadUniversityLocation/',
            success: function (data) {
                Morris.Donut({
                    element: 'morris-donut-chart2',
                    data:
                        $.each(JSON.parse(data), function (index, val) {
                            [{
                                label: val.label,
                                value: val.value
                            }]
                        }),
                    resize: true
                });
            }
        });
    }

    function Plan() {
        $.ajax({
            type: 'GET',
            url: '/Dashboard/LoadPlanRealization/',
            data: { param : "2019" },
            success: function (data) {
                Morris.Area({
                    element: 'morris-area-chart',
                    data:
                        $.each(JSON.parse(data), function (index, val) {
                            [{
                                quantity: val.label,
                                plan: val.value,
                                start_date: val.start_date
                            }]
                        }),
                    xkey: 'start_date',
                    ykeys: ['plan', 'quantity'],
                    labels: ['Plan', 'Realization'],
                    pointSize: 3,
                    fillOpacity: 0,
                    pointStrokeColors: ['#55ce63', '#009efb'],
                    behaveLikeLine: true,
                    gridLineColor: '#e0e0e0',
                    lineWidth: 3,
                    hideHover: 'auto',
                    lineColors: ['#55ce63', '#009efb'],
                    resize: true
                });
            }
        });
    }
	
	function Top(){
	    $.ajax({
            type: 'GET',
            url: '/Dashboard/LoadTopUniversity/',
            success: function (data) {
                debugger;
                chart.setData(JSON.parse(data));
			}
		});
    }

    var chart = Morris.Bar({
        // ID of the element in which to draw the chart.
        element: 'morris-bar-chart',
        // Set initial data (ideally you would provide an array of default data)
        data: [0, 0],
        xkey: 'label',
        ykeys: ['value'],
        labels: ['Quantity'],
        resize: true
    });    

    Top(chart);
</script>