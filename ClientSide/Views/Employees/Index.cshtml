@{
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                @using (Html.BeginForm("Upload", "Employees", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="upload-btn-wrapper">
                        <button class="fa fa-cloud-upload btn btn-up"></button>
                        <input type="file" name="formFile" id="dataFile" />
                    </div>
                    <div class="form-group">
                        <input type="submit" name="btnupload" value="Upload" class="btn btn-default" />
                    </div>
                }
                <div class="upload-btn-wrapper">
                    <button type="button" id="Create" class="btn right fa fa-plus-circle btn-add" data-toggle="modal" data-target="#myModal" onclick="ClearScreen();"></button>
                </div>
            </div>
        </div>
        <table class="table table-hover" id="table">
            <thead>
                <tr>
                    <th style="background-color:#44e5b9;color:white;text-align:center;width:100px">
                        No.
                    </th>
                    <th style="background-color:#44e5b9;color:white;text-align:center">
                        Name
                    </th>
                    <th style="background-color:#44e5b9;color:white;text-align:center">
                        Email
                    </th>
                    <th style="background-color:#44e5b9;color:white;text-align:center">
                        Location
                    </th>
                    <th style="background-color:#44e5b9;color:white;text-align:center">
                        Phone
                    </th>
                    <th style="background-color:#44e5b9;color:white;text-align:center" class="no-sort">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody class="tbody"></tbody>
        </table>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Employee Form</h4>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div>
                <div class="modal-body">
                    <div class="form-group" hidden="hidden">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" />
                    </div>
                    <div class="form-group">
                        <label for="FirstName">First Name</label>
                        <input type="text" class="form-control" id="FirstName" placeholder="First Name" />
                    </div>
                    <div class="form-group">
                        <label for="LastName">Last Name</label>
                        <input type="text" class="form-control" id="LastName" placeholder="Last Name" />
                    </div>
                    <div class="form-group" id="emailclass">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="Email" placeholder="Email" />
                    </div>
                    <div class="form-group">
                        <label for="Hiring_Location">Hiring Location</label>
                        <select id="Province" class="pc form-control">
                            <option>Select Province</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select id="District" class="pc form-control district">
                            <option>Select District</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Phone">Phone</label>
                        <div class="form-inline">
                            <input type="number" class="form-control col-md-2" placeholder="+62" disabled="disabled" />
                            <input type="text" class="form-control col-md-10" id="Phone" name="phone" placeholder="Phone Number" onkeypress="return isNumberKey(event)" />
                        </div>
                    </div>
                    <div class="form-group" hidden="hidden">
                        <input type="text" class="form-control" id="hiddenfield" placeholder="Last Name" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" style="background-color:#44e5b9;border-color:#44e5b9" id="Save" onclick="Validate();">Add</button>
                    <button type="button" class="btn btn-primary" style="background-color:#44e5b9;border-color:#44e5b9" id="Update" onclick="Validate();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="myModalUpdateId" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabelUpdate">Employee Form</h4>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="IdUpdate" placeholder="Id" onkeypress="return isNumberKey(event)" />
                    </div>
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="EmailUpdate" placeholder="Email" disabled="disabled" />
                    </div>
                    <div class="form-group" hidden="hidden">
                        <label for="FirstName">First Name</label>
                        <input type="text" class="form-control" id="FirstNameUpdate" placeholder="First Name" />
                    </div>
                    <div class="form-group" hidden="hidden">
                        <label for="LastName">Last Name</label>
                        <input type="text" class="form-control" id="LastNameUpdate" placeholder="Last Name" />
                    </div>
                    <div class="form-group" hidden="hidden">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="EmailUpdate" placeholder="Email" />
                    </div>
                    <div class="form-group" hidden="hidden">
                        <label for="Hiring_Location">Hiring Location</label>
                        <input type="text" class="form-control" id="Hiring_LocationUpdate" placeholder="Hiring Location" />
                    </div>
                    <div class="form-group" hidden="hidden">
                        <label for="Phone">Phone</label>
                        <div class="form-inline">
                            <input type="number" class="form-control col-md-2" placeholder="+62" disabled="disabled" />
                            <input type="text" class="form-control col-md-10" id="PhoneUpdate" onchange="ValidatePhone();" onkeypress="return isNumberKey(event)" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" style="background-color:#44e5b9;border-color:#44e5b9" id="Update" onclick="ValidateUpdate();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section scripts {
    <script src="~/plugins/jqueryui/jquery-ui.js"></script>
    <link href="~/plugins/jqueryui/jquery-ui.css" rel="stylesheet" />
    <script src="~/plugins/select2/dist/js/select2.min.js"></script>
    <link href="~/plugins/select2/dist/css/select2.min.css" rel="stylesheet" />
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <link href="https://github.com/BlackrockDigital/startbootstrap-sb-admin-2/blob/6b5d5953b67dbe830fee993de3693dc437078a8d/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet" />
    <script src="~/plugins/sweetalert2/sweetalert2@8.js"></script>
    <script src="~/plugins/moment/moment.js"></script>
    <script src="~/Script/EmployeeScript.js"></script>
    <link href="~/css/uploaddownload.css" rel="stylesheet" />
}

<style>
    #Progress_Status {
        width: 50%;
        background-color: #ddd;
    }

    #myprogressBar {
        width: 1%;
        height: 35px;
        background-color: #4CAF50;
        text-align: center;
        line-height: 32px;
        color: black;
    }
</style>