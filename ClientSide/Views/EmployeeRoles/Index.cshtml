@{
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item bold"><a href="javascript:void(0)"><b><font size="5">Home</font></b></a></li>
                <li class="breadcrumb-item active"><font size="5">Access Right</font></li>
            </ol>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">


                <div class="upload-btn-wrapper">
                    <button type="button" id="Create" class="btn right fa fa-plus-circle btn-add" data-toggle="modal" data-target="#myModal" onclick="ClearScreen();"></button>
                </div>
            </div>
        </div>
        <br />
        <table class="table table-hover" id="table">
            <thead>
                <tr>
                    <th style="background-color:#009efb;color:white;text-align:center">
                        No
                    </th>
                    <th style="background-color:#009efb;color:white;text-align:center">
                        NIK
                    </th>
                    <th style="background-color:#009efb;color:white;text-align:center">
                        Name
                    </th>
                    <th style="background-color:#009efb;color:white;text-align:center">
                        Role
                    </th>
                    <th style="background-color:#009efb;color:white;text-align:center" class="no-sort">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody class="tbody"></tbody>
        </table>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Employee Role</h4>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div>
                <div class="modal-body">
                    <div class="form-group" hidden="hidden">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" />
                    </div>
                    <div class="form-group">
                        <label for="Employee">Name</label>
                        <select id="Employee" class="pc form-control">
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Role">Role</label>
                        <select id="Role" class="select2 m-b-10 select2-multiple" style="width:100%" multiple="multiple"></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="Save" onclick="Save();">Add</button>
                    <button type="button" class="btn btn-primary" id="Update" onclick="Update();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="myModalUpdate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Update Role</h4>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div>
                <div class="modal-body">
                    <div class="form-group" hidden="hidden">
                        <input type="text" class="form-control" id="Id" />
                        <input type="text" class="form-control" id="Nik" />
                    </div>
                    <div class="form-group">
                        <label for="Employee">Name</label>
                        <input type="text" class="form-control" id="Employees" placeholder="Name" disabled />
                    </div>
                    <div class="form-group">
                        <label for="Role">Role</label>
                        <select id="RoleUpdate" class="pc form-control">
                            <option>Select Role</option>
                        </select>
                        <br />
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btn_Save" onclick="Save();">Add</button>
                    <button type="button" class="btn btn-primary" id="btn_Update" onclick="Update();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section scripts {
    <script src="~/js/jqueryui/jquery-ui.js"></script>
    <link href="~/js/jqueryui/jquery-ui.css" rel="stylesheet" />
    <script src="~/js/datatables/jquery.dataTables.min.js"></script>
    <link href="https://github.com/BlackrockDigital/startbootstrap-sb-admin-2/blob/6b5d5953b67dbe830fee993de3693dc437078a8d/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet" />
    <script src="~/plugins/select2/dist/js/select2.min.js"></script>
    <link href="~/plugins/select2/dist/css/select2.min.css" rel="stylesheet" />
    <script src="~/js/sweetalert2/sweetalert2@8.js"></script>
    <script src="~/js/moment/moment.js"></script>
    <script src="~/Script/EmployeeRoleMaster/EmployeeRoleScript.js"></script>
    <link href="~/css/uploaddownload.css" rel="stylesheet" />
}


